# Example production-ready .env values (DO NOT commit real secrets)
# Django core
SECRET_KEY=replace-with-a-very-long-random-secret
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (example)
DATABASE_URL=postgresql://user:password@db-host:5432/giyatra_db

# If you're using Neon (serverless Postgres) you can use a Neon-style URL.
# Example (replace with your actual Neon connection string). Neon often
# requires sslmode=require and may include channel_binding for stricter TLS:
# DATABASE_URL=postgresql://neon_user:neon_pass@ep-branch-name-neon-host.neon.tech/neondb?sslmode=require&channel_binding=require

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# CORS Settings (comma-separated, include scheme)
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://yourdomain.com

# Email (production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=super-secret-password
EMAIL_USE_TLS=True

# AWS S3 (optional for production media)
#AWS_ACCESS_KEY_ID=
#AWS_SECRET_ACCESS_KEY=
#AWS_STORAGE_BUCKET_NAME=
#AWS_S3_REGION_NAME=

# Admin credentials for initial bootstrap (change immediately)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisVeryStrongPassword!

# Frontend API key for SPA endpoints (optional)
FRONTEND_API_KEY=replace-with-random-token

# Security toggles (production defaults)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=False
SECURE_HSTS_SECONDS=31536000
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Site and frontend URLs (used by backend to construct absolute links)
# Set SITE_URL to your backend origin and FRONTEND_URL to your SPA origin
SITE_URL=https://your-backend.example.com
FRONTEND_URL=https://your-frontend.example.com

# Optional: override trusted CSRF origins (comma-separated with scheme)
#CSRF_TRUSTED_ORIGINS=https://app.yourdomain.com,https://yourdomain.com
