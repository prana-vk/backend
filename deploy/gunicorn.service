[Unit]
Description=gunicorn daemon for Giyatra
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/your/app
ExecStart=/path/to/your/app/.venv/bin/gunicorn --access-logfile - --workers 3 --bind unix:/run/gunicorn-giyatra.sock giyatra_project.wsgi:application

[Install]
WantedBy=multi-user.target
